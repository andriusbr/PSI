<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:text="@string/old_password"
                android:textColor="#000000"
                android:textSize="12sp"/>
            <EditText
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:id="@+id/edit_text_old_password"
                android:singleLine="true"
                android:password="true" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:text="@string/new_password"
                android:textColor="#000000"
                android:textSize="12sp"/>
            <EditText
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:id="@+id/edit_text_new_password1"
                android:singleLine="true"
                android:password="true" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:text="@string/new_password"
                android:textColor="#000000"
                android:textSize="12sp"/>
            <EditText
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:id="@+id/edit_text_new_password2"
                android:singleLine="true"
                android:password="true" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change"
            android:id="@+id/button_change_password_confirm"
            android:layout_gravity="center_horizontal"
            style="@style/Base.Theme.AppCompat.Light.DarkActionBar" />
    </LinearLayout>

</RelativeLayout>