<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/textbox">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3sp"
            android:layout_gravity="right">
            <ImageButton
                style="?android:attr/buttonStyleSmall"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/buttonPWClose"
                android:background="@drawable/close_button" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:text="@string/first_name"
                android:textColor="#000000"
                android:textSize="12sp"/>
            <EditText
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:id="@+id/edit_add_first_name"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:text="@string/last_name"
                android:textColor="#000000"
                android:textSize="12sp"/>
            <EditText
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:id="@+id/edit_add_last_name"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:textColor="#000000"
                android:textSize="12sp"/>
            <EditText
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:id="@+id/edit_login"
                android:singleLine="true" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add"
            android:id="@+id/button_add_new_user"
            android:layout_gravity="center_horizontal"
            style="@style/Base.Theme.AppCompat.Light.DarkActionBar" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#000000"
                android:text="@string/add_user_note"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>