<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="5dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/admin_logo" />
    </LinearLayout>

    <TableLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/manage_couriers"
            android:id="@+id/button_manage_couriers"
            android:layout_gravity="center_horizontal"
            style="@style/Base.Theme.AppCompat.Light.DarkActionBar" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/admin_orders"
            android:id="@+id/button_admin_orders"
            android:layout_gravity="center_horizontal"
            style="@style/Base.Theme.AppCompat.Light.DarkActionBar" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_password"
            android:id="@+id/button_admin_change_password"
            android:layout_gravity="center_horizontal"
            style="@style/Base.Theme.AppCompat.Light.DarkActionBar" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_logout"
            android:id="@+id/button_admin_logout"
            android:layout_gravity="center_horizontal"
            style="@style/Base.Theme.AppCompat.Light.DarkActionBar" />
    </TableLayout>


</RelativeLayout>